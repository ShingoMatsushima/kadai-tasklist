<h1>id = <%= @task.id %> のタスク詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th class="col-md-2">ID</th>
    <td class="col-md-10"><%= @task.id %></td>
  </tr>
  <tr>
    <th>登録者ID</th>
    <td><%= @task.user.id %></td>
  </tr>
  <tr>
    <th>登録者</th>
    <td><%= @task.user.name %></td>
  </tr>
  <tr>
    <th>タスク</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
</table>

<% if current_user.id == @task.user.id %>
  <%= link_to 'タスクを変更する', edit_task_path(@task), class: 'btn btn-default'%>
  <%= link_to 'タスクを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger'  %>
<% end %>

  <%= link_to 'タスク一覧に戻る', tasks_path, class: 'btn btn-default'%>
