<h1>タスク一覧</h1>

<%if @tasks.any? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>登録者</th>
        <th>登録者ID</th>
        <th>タイトル</th>
        <th>ステータス</th>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.user.name %></td>
          <td><%= task.user.id %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table> 
  <div>
    <%= paginate @tasks %>
  </div>
<% end %>
<%= link_to 'タスク登録', new_task_path, class: "btn btn-primary" %>